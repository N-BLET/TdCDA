@model TdCDA.Models.City

@{
    ViewData["Title"] = "Delete";
}

<h1>Supprimer</h1>

<h3>Êtes-vous sûr de vouloir supprimer cette ville ?</h3>
<div>
    <h4>Ville</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Identifiant de la ville
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCity)
        </dd>
        <dt class = "col-sm-2">
            Nom de la ville
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour à la liste</a>
    </form>
</div>
