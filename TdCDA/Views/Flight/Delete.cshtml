@model TdCDA.Manager.FlightManager

@{
    ViewData["Title"] = "Delete";
}

<h1>SUPPRIMER</h1>

<h3>Êtes vous sûr de vouloir supprimer ce vol ?</h3>
<div>
    <h4>Vol</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Identifiant du vol
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Flight.IdFlight)
        </dd>
        <dt class = "col-sm-2">
            Référence
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Flight.Reference)
        </dd>
        <dt class = "col-sm-2">
            Date et heure de départ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Flight.DepartureDate)
        </dd>
        <dt class = "col-sm-2">
            Date et heure d'arrivée
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Flight.ArrivalDate)
        </dd>
        <dt class = "col-sm-2">
            Ville de départ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartureCityName)
        </dd>
        <dt class = "col-sm-2">
            Ville d'arrivée
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArrivalCityName)
        </dd>
        <form asp-action="Delete">
            <input type="submit" value="Supprimer" class="btn btn-danger" />
        </form>
        <div>
            <a asp-action="Index">Retour à la liste</a>
        </div>
    </dl>
    
    
</div>
